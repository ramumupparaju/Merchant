<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="scanning"
            type="com.incon.connect.ui.homescan.HomeScanActivity"/>


        <variable
            name="mobilenumber"
            type="com.incon.connect.ui.homescan.HomeScanActivity"/>

    </data>


<LinearLayout

    style="@style/BothMatch">

    <LinearLayout
        android:orientation="vertical"
        style="@style/BothMatch"

        >
        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView2"
            style="@style/BothWrap"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Scan Customer UID" />

        <ImageView
            android:onClick="@{() -> scanning.onScanningClick()}"
            android:layout_gravity="center"
            android:id="@+id/im_scann"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            app:srcCompat="@drawable/ic_connect_logo_svg" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView3"
            style="@style/BothWrap"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="62dp"
            android:text="OR" />



        <TextView
            android:onClick="@{() -> mobilenumber.onTextClick()}"
            android:background="@drawable/bg_change"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/text_mobilenumber"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="62dp"
            android:textColor="#4f535d"
            android:text="Enter Mobile Number" />







    </LinearLayout>


</LinearLayout>

</layout>