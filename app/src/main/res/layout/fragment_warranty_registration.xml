<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="warrantyregistration"
            type="com.incon.connect.ui.warrantyregistration.fragment.WarrantyRegistrationFragment"/>
    </data>
    <LinearLayout
        android:background="@color/white"
        style="@style/BothMatch"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            style="@style/MatchWrap">


        <LinearLayout
            android:orientation="vertical"
            style="@style/BothMatch">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical"
                style="@style/MatchWrap"
                >
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    style="@style/MatchWrap"
                    >
                    <TextView
                        android:id="@+id/tv_modelno"
                        style="@style/text_field"
                        android:text="@string/action_modelno" />

                    <EditText
                        style="@style/edit_field"
                        android:id="@+id/search_view">

                    </EditText>


                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/edit_background"
                    style="@style/view"/>
                <LinearLayout
                    android:layout_weight="1"
                    style="@style/MatchWrap">
                    <android.support.v7.widget.RecyclerView
                          android:id="@+id/recyclerview_data"
                          android:fadeScrollbars="false"
                          android:scrollbarSize="4dp"
                          android:scrollbarThumbVertical="@drawable/scrollbar"
                          android:scrollbars="vertical"
                          style="@style/BothWrap" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"

                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/linear_price_details"
                android:orientation="vertical"
                style="@style/MatchWrap">
                <LinearLayout

                    android:layout_weight="1"
                    android:orientation="horizontal"
                    style="@style/MatchWrap">

                    <LinearLayout
                        android:layout_weight="1"
                        style="@style/MatchWrap">
                        <TextView
                            android:id="@+id/tv_price"
                            style="@style/text_field"
                            android:text="@string/action_price" />
                        <EditText
                            android:inputType="number"
                            style="@style/edit_field"
                            android:id="@+id/et_price"
                            />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/edit_background"
                    style="@style/view"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    style="@style/MatchWrap"
                    >
                    <TextView
                        android:id="@+id/tv_batchno"
                        style="@style/text_field"
                        android:text="@string/action_batchno" />
                    <EditText
                        style="@style/edit_field"
                        android:id="@+id/et_batchno" />

                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/edit_background"
                    style="@style/view"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    style="@style/MatchWrap">
                    <TextView
                        android:id="@+id/tv_serialno"
                        style="@style/text_field"
                        android:text="@string/action_serialno" />
                    <EditText
                        style="@style/edit_field"
                        android:id="@+id/et_serialno" />

                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/edit_background"
                    style="@style/view"/>



            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                style="@style/MatchWrap"
                >
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/BothMatch"
                    >
                    <Button
                        android:onClick="@{() -> warrantyregistration.onSubmitClick()}"
                        android:id="@+id/button_submit"
                        style="@style/submit_button"
                        />

                    <EditText
                        android:id="@+id/button_otp"
                        style="@style/otp_button"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                style="@style/MatchWrap"
                >
                <LinearLayout
                    style="@style/BothMatch"
                    >

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floating_button"
                        android:layout_marginLeft="@dimen/margin_265"
                        android:layout_marginTop="@dimen/margin_10"
                        style="@style/BothWrap"
                        android:onClick="@{() -> warrantyregistration.onFloatingClick()}"
                        android:src="@android:drawable/ic_dialog_email" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        </android.support.v4.widget.SwipeRefreshLayout>



    </LinearLayout>


</layout>

