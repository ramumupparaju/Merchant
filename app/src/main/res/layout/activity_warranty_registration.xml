<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="warrantyregistration"
            type="com.incon.connect.ui.warrantyregistration.WarrantyRegistration"/>

    </data>



<LinearLayout

    style="@style/BothMatch"

    >

    <LinearLayout
        android:orientation="vertical"
        style="@style/BothMatch"
        >

        <LinearLayout
            android:orientation="vertical"
            style="@style/MatchWrap"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                style="@style/MatchWrap"
                >
                <TextView
                    android:id="@+id/tv_modelno"
                    style="@style/text_field"
                    android:text="@string/action_modelno" />

                <EditText
                    style="@style/edit_field"
                    android:id="@+id/search_view"
                    android:drawableRight="@android:drawable/ic_search_category_default"
                    />

            </LinearLayout>
            <ImageView
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/edit_background"
                style="@style/view"/>
            <LinearLayout
                android:layout_weight="1"
                style="@style/MatchWrap">
                <ListView
                    android:id="@+id/list_data"
                    style="@style/BothWrap" />

            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_price_details"
            android:orientation="vertical"
            style="@style/MatchWrap">
            <LinearLayout

                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                style="@style/MatchWrap"
                >

                <LinearLayout
                    android:layout_weight="1"
                    style="@style/MatchWrap">

                    <TextView

                        android:id="@+id/tv_price"
                        style="@style/text_field"
                        android:text="@string/action_price" />

                    <EditText
                        android:inputType="number"
                        style="@style/edit_field"
                        android:id="@+id/et_price"
                        />

                </LinearLayout>



            </LinearLayout>
            <ImageView
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/edit_background"
                style="@style/view"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                style="@style/MatchWrap"
                >
                <TextView
                    android:id="@+id/tv_batchno"
                    style="@style/text_field"
                    android:text="@string/action_batchno" />

                <EditText
                    style="@style/edit_field"
                    android:id="@+id/et_batchno"
                    />

            </LinearLayout>
            <ImageView
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/edit_background"
                style="@style/view"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                style="@style/MatchWrap"
                >
                <TextView

                    android:id="@+id/tv_serialno"
                    style="@style/text_field"
                    android:text="@string/action_serialno" />

                <EditText
                    style="@style/edit_field"
                    android:id="@+id/et_serialno"
                    />

            </LinearLayout>
            <ImageView
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/edit_background"
                style="@style/view"/>



        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            style="@style/MatchWrap"
            >
            <LinearLayout
                android:orientation="vertical"
                style="@style/BothMatch"
                >
                <Button
                    android:background="@drawable/btn_login_register_roundedcorner"
                    android:id="@+id/button_submit"
                    android:text="@string/action_submit"
                    android:layout_gravity="center"
                 android:textColor="@color/colorPrimary"
                    style="@style/BothWrap"
                    />

                <EditText
                    android:layout_marginTop="@dimen/margin_20"
                    android:maxLines="1"
                    android:background="@drawable/bg_change"
                    android:id="@+id/button_otp"
                    android:text="@string/action_otp"
                    android:layout_gravity="center"
                    style="@style/BothWrap" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            style="@style/MatchWrap"
           >
            <LinearLayout
                style="@style/BothMatch"
                >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floating_button"
                    android:layout_marginLeft="@dimen/margin_265"
                    android:layout_marginTop="@dimen/margin_10"
                    style="@style/BothWrap"
                    android:onClick="@{() -> warrantyregistration.onFloatingClick()}"
                    android:src="@android:drawable/ic_dialog_email" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>


</layout>

